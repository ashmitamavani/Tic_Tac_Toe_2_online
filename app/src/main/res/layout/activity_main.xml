<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">
   <TextView
       android:id="@+id/display"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:text="Tic Tac Toe-2"
       android:textSize="40dp"
       android:layout_weight="1"
       android:gravity="center"
       android:fontFamily="serif"
       android:textStyle="italic"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
      android:layout_weight="1">
      <Button
          android:id="@+id/bb0"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
         android:layout_weight="1"
         android:layout_margin="10dp"
         android:backgroundTint="#D069E1"/>
      <Button
          android:id="@+id/bb1"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
      <Button
          android:id="@+id/bb2"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1">
      <Button
          android:id="@+id/bb3"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
      <Button
          android:id="@+id/bb4"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
      <Button
          android:id="@+id/bb5"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1">
      <Button
          android:id="@+id/bb6"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
      <Button
          android:id="@+id/bb7"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
      <Button
          android:id="@+id/bb8"
          android:textSize="40dp"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:layout_margin="10dp"
          android:backgroundTint="#D069E1"/>
   </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
     android:layout_weight="1"
      android:gravity="center">
     <TextView
         android:id="@+id/win"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
        android:text="win="
         android:textColor="#E8DE18"
         android:textSize="40dp"/>
   <Button
       android:id="@+id/reset"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
      android:layout_gravity="center"
       android:layout_weight="1"
       android:text="reset"
       android:textSize="40dp"/>
  </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"/>


</LinearLayout>